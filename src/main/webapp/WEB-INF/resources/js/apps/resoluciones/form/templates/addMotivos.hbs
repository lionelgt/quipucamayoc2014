    }
    #tablaAddMotivo_info{
        float: left;
        margin-top: -12px;
        margin-left: 18px;
        font-size: 10px;
        color: rgb(2, 2, 2);
    }
    #moti-body>tr{
        cursor: pointer;
    }



    #tablaAddMotivo_previous{
        cursor: pointer;
